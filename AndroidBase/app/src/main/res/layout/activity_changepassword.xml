<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/back_gradient"
    android:orientation="vertical">
    <include layout="@layout/main_title_bar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="用户名："
            android:textSize="20dp"
            android:textColor="#660066"/>
        <EditText
            android:id="@+id/changepsw_user_name"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/edit_background"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="原来的密码："
            android:textSize="20dp"
            android:textColor="#660066"/>
        <EditText
            android:id="@+id/changepsw_old"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/edit_background"
            android:hint="请输入原来的密码"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="新密码："
            android:textSize="20dp"
            android:textColor="#660066"/>
        <EditText
            android:id="@+id/changepsw_new"
            android:layout_width="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/edit_background"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/changepsw_new_again"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/edit_background"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_changepsw"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:background="#CC99CC"
        android:text="确认修改"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp"
        android:textStyle="bold"/>
</LinearLayout>

